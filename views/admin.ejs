<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="css/admin-styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto+Mono&family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
</head>
<body>
    <h1 class="title">Admin Panel</h1>
<table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Title</th>
        <th>Date</th>
        <th>Time Slot</th>
        <th>Class</th>
        <th>Section</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% formData.forEach((data, index) => { %>
        <tr>
          <td><%= data.name %></td>
          <td><%= data.title %></td>
          <td><%= data.date %></td>
          <td><%= data.time %></td>
          <td><%= data.class %></td>
          <td><%= data.section %></td>
          <td><%= data.description %></td>
          <td>
            <form action="/admin/remove/<%= index %>" method="post">
              <button type="submit" class="remove-btn">X</button>
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>  
</body>
</html>
